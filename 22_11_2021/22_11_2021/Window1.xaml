<Window x:Class="_22_11_2021.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_22_11_2021"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50"/>
        <Label Content="Count" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="50"/>
        <Button Content="Add" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="50" Click="Button_Click"/>
        <TextBox Name="NameInput" HorizontalAlignment="Left" VerticalAlignment="Bottom"  TextWrapping="Wrap" Width="60" Margin="50" TextChanged="NameInput_TextChanged"/>
        <TextBox Name="CountInput" HorizontalAlignment="Right" VerticalAlignment="Bottom" TextWrapping="Wrap" Width="60" Margin="50" TextChanged="CountInput_TextChanged"/>
    </Grid>
</Window>
