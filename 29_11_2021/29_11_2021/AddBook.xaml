<Window x:Class="_29_11_2021.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_29_11_2021"
        mc:Ignorable="d"
        Title="AddBook" Height="240" Width="240">
    <Grid>
        <Label Content="Tytuł" HorizontalAlignment="Left" Margin="60,33,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="title_input" HorizontalAlignment="Left" Margin="60,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="title_input_TextChanged"/>
        <Label Content="Autor" HorizontalAlignment="Left" Margin="60,87,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="author_input" HorizontalAlignment="Left" Margin="60,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="author_input_TextChanged"/>
        <Button Content="Dodaj książkę" HorizontalAlignment="Left" Margin="60,141,0,0" VerticalAlignment="Top" Width="120" Click="AddBook_Button_Click"/>
    </Grid>
</Window>
